<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_xhdpi_45"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/container_content"
        android:layout_width="match_parent"
    	android:layout_height="@dimen/margin_xhdpi_44"
    	android:orientation="horizontal"
    	android:background="@color/white_color">
        <RelativeLayout
            android:layout_width="@dimen/margin_xhdpi_45"
    		android:layout_height="match_parent" >
            <ImageView 
                android:id="@+id/iv_item_choose"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_centerInParent="true"
    			android:src="@drawable/item_choose"
    			android:visibility="invisible" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center_vertical"
    		android:textSize="@dimen/font_size_xhdpi_14"
    		android:textColor="@color/text_color_title" />
    </LinearLayout>
    
    <include 
        layout="@layout/horizontal_line_separate"/>
</LinearLayout>
