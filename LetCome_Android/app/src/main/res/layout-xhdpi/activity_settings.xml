<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gxq.tpm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_bg"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/white_color"
    	android:orientation="vertical">

        <include layout="@layout/horizontal_space_separate"/>
        
        <com.gxq.tpm.ui.CItemBar
	    	android:id="@+id/user_phone_login"
	    	android:layout_width="match_parent"
    		android:layout_height="@dimen/margin_xhdpi_45"
    		app:itemTitleText="@string/user_phone_login"
    		app:itemShowDetail="true"/>
     
        <View 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/horizontal_line_separate_height"
		    android:layout_marginLeft="@dimen/margin_xhdpi_15"
		    android:background="@color/line_seperate_inside_color" >
		</View>
        
        <com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_gesture_pwd"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleText="@string/user_gesture_pwd"
	    	app:itemShowDetail="true" />
        
        <include
	   	    layout="@layout/horizontal_space_separate" />
	    
	    <com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_about"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleText="@string/user_about"
	    	app:itemShowDetail="true" />
	    
	   	<include 
	    layout="@layout/horizontal_line_separate" />
    
		<View 
	    	android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_20"
	    	android:background="@color/product_bg" >
		</View>

		<include 
		    layout="@layout/horizontal_line_separate" />
	        
    </LinearLayout>
	
	<TextView
	    android:id="@+id/user_quit" 
	    android:layout_width="match_parent"
    	android:layout_height="@dimen/margin_xhdpi_45"
    	android:gravity="center"
    	android:text="@string/user_quit"
    	android:textSize="@dimen/font_size_xhdpi_16"
    	android:textColor="@color/text_color_title"
    	android:background="@color/white_color"/>
   	
   	<include
   	    layout="@layout/horizontal_line_separate" />
   	
</LinearLayout>