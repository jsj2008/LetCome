<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.gxq.tpm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_bg" >
    <include 
        android:id="@+id/view_line_top"
        layout="@layout/horizontal_line_separate"/>
    <include 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        layout="@layout/listview"
        android:visibility="gone" 
        android:layout_below="@+id/view_line_top"/>
    
    <com.gxq.tpm.ui.CEmptyNoteView
        android:id="@+id/rl_none"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
        app:src_text="@string/product_empty_list"
        app:btn_text="@string/product_empty_list_btn" 
        android:layout_below="@+id/view_line_top"/>

</RelativeLayout>