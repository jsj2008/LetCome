<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include
		layout="@layout/horizontal_line_separate" />
    
	<RelativeLayout 
	    android:layout_width="match_parent"
    	android:layout_height="@dimen/margin_xhdpi_44"
    	android:background="@color/product_bg">
	    
	    <com.gxq.tpm.ui.CTabTitleSelector
	        android:id="@+id/tab_title"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/margin_xhdpi_30"
	        android:layout_marginLeft="@dimen/margin_xhdpi_15"
	        android:layout_marginRight="@dimen/margin_xhdpi_15"
	        android:background="@drawable/tab_title_bg"
	        android:layout_centerInParent="true" />
	</RelativeLayout>
	
	<include
		layout="@layout/horizontal_line_separate" />

	<android.support.v4.view.ViewPager
        android:id="@+id/strategy_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
	
</LinearLayout>
