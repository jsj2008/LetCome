<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:minHeight="@dimen/margin_xhdpi_110"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xhdpi_110" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xhdpi_16"
            android:paddingLeft="@dimen/margin_xhdpi_15"
            android:paddingRight="@dimen/margin_xhdpi_15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cooperation_strategy_policy_item_investor"
                android:textAppearance="@style/font_999999_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cooperation_strategy_policy_item_fund"
                    android:textAppearance="@style/font_999999_12" />

                <TextView
                    android:id="@+id/tv_fund_str"
                    android:layout_width="@dimen/font_size_xhdpi_25"
                    android:layout_height="@dimen/margin_xhdpi_12"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_xhdpi_6"
                    android:background="@drawable/btn_rect_508cf0"
                    android:gravity="center"
                    android:textColor="@color/color_508cf0"
                    android:textSize="@dimen/font_size_xhdpi_9" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/cooperation_strategy_policy_item_collect"
                android:textAppearance="@style/font_999999_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_30"
            android:layout_marginTop="@dimen/margin_xhdpi_36"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_xhdpi_15"
            android:paddingRight="@dimen/margin_xhdpi_15" >

            <TextView
                android:id="@+id/tv_dealer_replace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/item_cert"
                android:drawablePadding="@dimen/margin_xhdpi_6"
                android:textAppearance="@style/font_222222_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_fund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff7814"
                    android:textSize="@dimen/font_size_xhdpi_16" />

                <View
                    android:layout_width="@dimen/margin_xhdpi_1"
                    android:layout_height="@dimen/margin_xhdpi_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_xhdpi_8"
                    android:layout_marginRight="@dimen/margin_xhdpi_8"
                    android:background="@color/line_seperate_color" />

                <TextView
                    android:id="@+id/tv_stock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/font_222222_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_next_step"
                android:layout_width="@dimen/margin_xhdpi_75"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_next_step_selector"
                android:gravity="center"
                android:text="@string/cooperation_strategy_policy_item_next_step"
                android:textColor="@color/text_next_step_selector"
                android:textSize="@dimen/font_size_xhdpi_14" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/margin_xhdpi_100"
            android:layout_height="@dimen/margin_xhdpi_20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_xhdpi_80"
            android:background="@drawable/shape_rectangle_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_time"
                android:drawablePadding="@dimen/margin_xhdpi_6"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_size_xhdpi_11" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_1"
            android:layout_alignParentBottom="true"
            android:background="@color/line_seperate_color" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/space_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_20"
            android:background="@color/product_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_1"
            android:background="@color/line_seperate_color" />
    </LinearLayout>

</LinearLayout>