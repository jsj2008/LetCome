<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_xhdpi_75"
    android:background="@color/color_fafafa"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
    
    <LinearLayout 
        android:layout_width="0dp"
    	android:layout_height="wrap_content"
    	android:layout_weight="5"
    	android:orientation="vertical">

	    <TextView 
            android:id="@+id/tv_cur_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xhdpi_15"
            android:text="@string/default_value"
            android:textSize="@dimen/font_size_xhdpi_25"
            android:textColor="@color/text_color_title" />
	        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xhdpi_15"
            android:orientation="horizontal">
            <TextView 
	            android:id="@+id/tv_diff"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/default_value"
	            android:textSize="@dimen/font_size_xhdpi_14"
            	android:textColor="@color/text_color_title" />
	            
            <TextView 
	            android:id="@+id/tv_diff_ratio"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/margin_xhdpi_10"
	            android:text="@string/default_value"
	            android:textSize="@dimen/font_size_xhdpi_14"
            	android:textColor="@color/text_color_title" />
	        </LinearLayout>
	</LinearLayout>
	
    <LinearLayout 
        android:layout_width="0dp"
    	android:layout_height="wrap_content"
    	android:layout_weight="3"
    	android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/stock_open"
	            android:textSize="@dimen/font_size_xhdpi_12"
            	android:textColor="@color/text_color_sub" />
	            
            <TextView 
	            android:id="@+id/tv_stock_open"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/margin_xhdpi_6"
	            android:text="@string/default_value"
	            android:textSize="@dimen/font_size_xhdpi_12"
            	android:textColor="@color/text_color_title" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xhdpi_10"
            android:orientation="horizontal">
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/stock_yclose"
	            android:textSize="@dimen/font_size_xhdpi_12"
            	android:textColor="@color/text_color_sub" />
	            
            <TextView 
	            android:id="@+id/tv_stock_yclose"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/margin_xhdpi_6"
	            android:text="@string/default_value"
	            android:textSize="@dimen/font_size_xhdpi_12"
            	android:textColor="@color/text_color_title" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="0dp"
    	android:layout_height="wrap_content"
    	android:layout_weight="4"
    	android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/stock_high"
	            android:textSize="@dimen/font_size_xhdpi_12"
            	android:textColor="@color/text_color_sub" />
	            
            <TextView 
	            android:id="@+id/tv_stock_high"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/margin_xhdpi_6"
	            android:text="@string/default_value"
	            android:textSize="@dimen/font_size_xhdpi_12"
            	android:textColor="@color/text_color_title" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xhdpi_10"
            android:orientation="horizontal">
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/stock_low"
	            android:textSize="@dimen/font_size_xhdpi_12"
            	android:textColor="@color/text_color_sub" />
	            
            <TextView 
	            android:id="@+id/tv_stock_low"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/margin_xhdpi_6"
	            android:text="@string/default_value"
	            android:textSize="@dimen/font_size_xhdpi_12"
            	android:textColor="@color/text_color_title" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
