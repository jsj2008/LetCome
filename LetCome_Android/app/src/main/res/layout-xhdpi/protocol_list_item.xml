<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mItem_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="57dp" >

    <TextView
        android:id="@+id/tv_protocol_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="17dp"
        android:singleLine="true"
        android:textColor="@color/color_222222"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_protocol_sign_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_below="@id/tv_protocol_name"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textAppearance="@style/font_848484_10" />

    <TextView
        android:id="@+id/tv_protocol_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        android:layout_below="@id/tv_protocol_name"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/tv_protocol_sign_state"
        android:gravity="center"
        android:textAppearance="@style/font_848484_10" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/tv_protocol_sign_state"
        android:layout_marginTop="8dp"
        android:background="@color/color_d9d9d9"
        />

</RelativeLayout>