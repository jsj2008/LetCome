<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@color/product_bg">
        
        <LinearLayout
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical" >
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/margin_xhdpi_225"
			    android:background="@color/tab_cur_selected"
			    android:orientation="vertical">
			    
			    <include
			        layout="@layout/strategy_investor_stock_item" />
			    
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="@dimen/margin_xhdpi_120"
			        android:layout_marginTop="@dimen/margin_xhdpi_30"
			        android:layout_gravity="center_horizontal"
			        android:orientation="horizontal">
					<RelativeLayout
				        android:layout_width="@dimen/margin_xhdpi_120"
				        android:layout_height="@dimen/margin_xhdpi_120"
				        android:layout_marginRight="@dimen/margin_xhdpi_40">
				        
				        <com.gxq.tpm.ui.CCircleProgressBar
				            android:id="@+id/cpb_today_days"
				            android:layout_width="match_parent"	
				        	android:layout_height="match_parent" />
				        
				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentTop="true"
				            android:layout_marginTop="@dimen/margin_xhdpi_25"
				            android:layout_centerHorizontal="true"
				            android:textSize="@dimen/font_size_xhdpi_12"
				            android:textColor="@color/white_color"
				            android:text="@string/strategy_buying_today" />
				        
				        <LinearLayout 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:orientation="horizontal"
				            android:layout_centerInParent="true"
				            android:gravity="center_vertical">
				            <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_marginRight="@dimen/margin_xhdpi_4"
					            android:textSize="@dimen/font_size_xhdpi_15"
					            android:textColor="@color/white_color"
					            android:text="@string/strategy_notice_today_days1" />
				            <TextView
				                android:id="@+id/tv_notice_today_days"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:textSize="@dimen/font_size_xhdpi_25"
					            android:textColor="@color/white_color"/>
				            <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_marginLeft="@dimen/margin_xhdpi_4"
					            android:textSize="@dimen/font_size_xhdpi_15"
					            android:textColor="@color/white_color"
					            android:text="@string/strategy_notice_today_days2" />
				        </LinearLayout>
				        
				        <TextView
				            android:id="@+id/tv_leave_day"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentBottom="true"
				            android:layout_marginBottom="@dimen/margin_xhdpi_25"
				            android:layout_centerHorizontal="true"
				            android:textSize="@dimen/font_size_xhdpi_12"
				            android:textColor="@color/white_color" />
				    </RelativeLayout>
				    <RelativeLayout
				        android:layout_width="@dimen/margin_xhdpi_120"
				        android:layout_height="@dimen/margin_xhdpi_120" >
				        
				        <com.gxq.tpm.ui.CCircleProgressBar
				            android:id="@+id/cpb_profit"
				            android:layout_width="match_parent"	
				        	android:layout_height="match_parent" />
				        
				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_alignParentTop="true"
				            android:layout_marginTop="@dimen/margin_xhdpi_25"
				            android:layout_centerHorizontal="true"
				            android:textSize="@dimen/font_size_xhdpi_12"
				            android:textColor="@color/white_color"
				            android:text="@string/strategy_notice_profit" />
				        
			            <TextView
			                android:id="@+id/tv_profit"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_centerInParent="true"
				            android:textSize="@dimen/font_size_xhdpi_25"
				            android:textColor="@color/white_color" />
				    </RelativeLayout>
			    </LinearLayout>
			</LinearLayout>
		    
			<RelativeLayout 
			    android:layout_width="match_parent"
		        android:layout_height="@dimen/margin_xhdpi_110"
		        android:background="@color/white_color">
		    	
		    	<TextView
		    	    android:id="@+id/tv_notice_time"
		    	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerHorizontal="true"
		        	android:layout_alignParentTop="true"
		        	android:layout_marginTop="@dimen/margin_xhdpi_32"
		        	android:textSize="@dimen/font_size_xhdpi_12"
		        	android:textColor="@color/text_color_sub" />
			    <TextView
			        android:id="@+id/tv_count_down"
		    	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_below="@id/tv_notice_time"
		        	android:layout_marginTop="@dimen/margin_xhdpi_5"
		        	android:layout_centerHorizontal="true"
		        	android:textSize="@dimen/font_size_xhdpi_25"
		        	android:textColor="@color/text_color_title"
		        	android:drawableLeft="@drawable/item_time2"
		        	android:drawablePadding="@dimen/margin_xhdpi_10"
		        	android:visibility="gone"/>
			    <TextView
			        android:id="@+id/tv_not_notice_time"
		    	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_below="@id/tv_notice_time"
		        	android:layout_marginTop="@dimen/margin_xhdpi_12"
		        	android:layout_centerHorizontal="true"
		        	android:textSize="@dimen/font_size_xhdpi_16"
		        	android:textColor="@color/text_color_tips"
		        	android:text="@string/strategy_notice_not_notice_time"
		        	android:visibility="gone" />	    
			</RelativeLayout>
			
			<include layout="@layout/horizontal_line_separate"/>
			
			<LinearLayout
			    android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
			    <TextView
		    	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="@dimen/margin_xhdpi_20"
		        	android:layout_marginLeft="@dimen/margin_xhdpi_15"
		        	android:text="@string/strategy_notice_important_tip"
		        	android:textSize="@dimen/font_size_xhdpi_12"
		        	android:textColor="@color/text_color_main" />
		        <TextView
		            android:id="@+id/tv_important_tip1"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="@dimen/margin_xhdpi_14"
		        	android:layout_marginLeft="@dimen/margin_xhdpi_15"
		        	android:layout_marginRight="@dimen/margin_xhdpi_15"
		        	android:lineSpacingExtra="@dimen/margin_xhdpi_5"
		        	android:textSize="@dimen/font_size_xhdpi_12"
		        	android:textColor="@color/text_color_main" />
		        
		        <TextView
		            android:id="@+id/tv_important_tip2"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="@dimen/margin_xhdpi_2"
		        	android:layout_marginLeft="@dimen/margin_xhdpi_15"
		        	android:layout_marginRight="@dimen/margin_xhdpi_15"
		        	android:textSize="@dimen/font_size_xhdpi_12"
		        	android:textColor="@color/text_color_main" />
		        
		        <TextView
		            android:id="@+id/tv_important_tip3"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="@dimen/margin_xhdpi_14"
		        	android:layout_marginBottom="@dimen/margin_xhdpi_20"
		        	android:layout_marginLeft="@dimen/margin_xhdpi_15"
		        	android:layout_marginRight="@dimen/margin_xhdpi_15"
		        	android:textSize="@dimen/font_size_xhdpi_12"
		        	android:textColor="@color/text_color_main" />
			</LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    <include 
        layout="@layout/horizontal_line_separate" />
    
	<include 
	    layout="@layout/btn_netx_step" />    
    
</LinearLayout>
