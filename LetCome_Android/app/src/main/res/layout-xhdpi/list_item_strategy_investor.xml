<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_xhdpi_45"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/tv_investor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_xhdpi_15"
        android:drawableRight="@drawable/item_cert"
        android:drawablePadding="@dimen/margin_xhdpi_4"
        android:textSize="@dimen/font_size_xhdpi_12"
        android:textColor="@color/text_color_sub"
        android:text="@string/strategy_investor" />
    
    <TextView 
	    android:id="@+id/tv_investor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xhdpi_4"
        android:layout_toRightOf="@+id/tv_investor"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_size_xhdpi_12"
        android:textColor="@color/text_color_sub" />
    
    <TextView 
        android:id="@+id/tv_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_xhdpi_15"
        android:textSize="@dimen/font_size_xhdpi_12"
        android:textColor="@color/btn_normal" />

    <View 
        android:id="@+id/vertical_sep"
        android:layout_width="@dimen/vertical_line_separate_width"
        android:layout_height="@dimen/margin_xhdpi_12"
        android:background="@color/line_seperate_color"
        android:layout_toLeftOf="@id/tv_stock_name"
        android:layout_marginRight="@dimen/margin_xhdpi_8"
        android:layout_centerVertical="true" />
    
    <TextView 
        android:id="@+id/tv_investor_fund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/vertical_sep"
        android:layout_marginRight="@dimen/margin_xhdpi_8"
        android:textSize="@dimen/font_size_xhdpi_12"
        android:textColor="@color/text_color_sub" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_investor_fund"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_xhdpi_5"
        android:textSize="@dimen/font_size_xhdpi_12"
        android:textColor="@color/text_color_sub"
        android:text="@string/strategy_invest_unit" />
    
</RelativeLayout>
