<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gxq.tpm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_bg">
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white_color" >
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/margin_xhdpi_216"
	        android:background="@drawable/bg2">
	        <com.gxq.tpm.ui.CircularImage
	            android:id="@+id/user_head_imageview"
	            android:layout_width="@dimen/margin_xhdpi_90"
	           	android:layout_height="@dimen/margin_xhdpi_90"
	           	android:layout_centerHorizontal="true"
	           	android:layout_above="@+id/tv_nickname"/>
	        
	        <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerHorizontal="true"
            	android:textAppearance="@style/font_white_14"
            	android:layout_marginTop="@dimen/margin_xhdpi_18"
            	android:layout_above="@+id/tv_uid"/>
            <TextView
                android:id="@+id/tv_uid"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerHorizontal="true"
            	android:textAppearance="@style/font_white_12"
            	android:layout_marginTop="@dimen/margin_xhdpi_6"
            	android:layout_marginBottom="@dimen/margin_xhdpi_25"
            	android:layout_alignParentBottom="true"/>
	    </RelativeLayout>
		<include
		    layout="@layout/horizontal_space_separate" />
		
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_auth"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleImage="@drawable/user_auth"
	    	app:itemTitleText="@string/user_auth"
	    	app:itemShowDetail="true" />
		<include
		    layout="@layout/item_bar_line_separate" />
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_dissentrecord_compensate"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleImage="@drawable/user_objection"
	    	app:itemTitleText="@string/user_dissentrecord_compensate"
	    	app:itemShowDetail="true" />
		
		<include 
		    layout="@layout/horizontal_space_separate" />
		
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_lgb_account"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleImage="@drawable/user_lgb"
	    	app:itemTitleText="@string/user_lgb_account"
	    	app:itemShowDetail="true" />
		
		<include
		    layout="@layout/item_bar_line_separate" />
		
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_weixin"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleImage="@drawable/user_weixin"
	    	app:itemTitleText="@string/user_weixin"
	    	app:itemShowDetail="true" />
		
		<include 
		    layout="@layout/horizontal_space_separate" />
		
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_letter"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleImage="@drawable/user_letter"
	    	app:itemShowDetail="true" />
		
		<include
		    layout="@layout/item_bar_line_separate" />
		
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_service"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleImage="@drawable/user_service"
	    	app:itemTitleText="@string/user_service"
	    	app:itemShowDetail="true" />
	
		<include
		    layout="@layout/item_bar_line_separate" />
		
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_setting"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleImage="@drawable/user_setting"
	    	app:itemTitleText="@string/user_setting"
	    	app:itemShowDetail="true" />
		
	   	<include
	   	    layout="@layout/horizontal_line_separate" />
	</LinearLayout>
	    
</ScrollView>
