<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gxq.tpm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_bg"
    android:orientation="vertical" >
    <include 
	        layout="@layout/horizontal_line_separate"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_color">
	    <RelativeLayout
	        android:id="@+id/bar_mark"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/margin_xhdpi_45"
	        android:background="@color/white_color"
	        android:clickable="true"
	        android:focusable="true" >
	
	        <ImageView
	            android:id="@+id/iv_gesture_switch"
	            android:layout_width="@dimen/margin_xhdpi_44"
	            android:layout_height="@dimen/margin_xhdpi_32"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="@dimen/margin_xhdpi_15"
	            android:src="@drawable/switch_off"
	            android:scaleType="fitCenter"
	            android:duplicateParentState="true" >
	        </ImageView>
	
	          <TextView
	            android:id="@+id/tv_gesture"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="@dimen/margin_xhdpi_15"
	            android:text="@string/user_gesture_pwd"
	            android:textSize="@dimen/font_size_xhdpi_16"
	            android:textColor="@color/color_222222" />
	    </RelativeLayout>
	    <include 
	        android:id="@+id/gesture_switch_line"
	        layout="@layout/item_bar_line_separate"/>
	    <LinearLayout
	        android:id="@+id/ll_detail"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white_color"
	        android:orientation="vertical" >
			<com.gxq.tpm.ui.CItemBar
			    android:id="@+id/lock_modify_gesture"
			    android:layout_width="match_parent"
		    	android:layout_height="@dimen/margin_xhdpi_45"
		    	app:itemTitleText="@string/lock_modify_gesture"
		    	app:itemShowDetail="true"/>
		        
	    </LinearLayout>
		     
		<include 
	        layout="@layout/horizontal_line_separate"/>
    </LinearLayout>
</LinearLayout>