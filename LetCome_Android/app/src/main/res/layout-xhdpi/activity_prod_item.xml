<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gxq.tpm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_bg" >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    <include layout="@layout/horizontal_line_separate"/>
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/margin_xhdpi_210"
	        android:background="@drawable/bg2" >
	        <com.gxq.tpm.ui.CircularImage
	      	    android:id="@+id/iv_head"
	          	android:layout_width="@dimen/margin_xhdpi_90"
	   		    android:layout_height="@dimen/margin_xhdpi_90"
	   		    android:layout_above="@+id/tv_lgb_account_show" 
	   		    android:layout_centerHorizontal="true"/>
	        <TextView 
	            android:id="@+id/tv_lgb_account_show"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textAppearance="@style/font_white_14"
	            android:text="@string/user_lgb_account_msg"
	            android:layout_above="@+id/tv_lgb_account"
	            android:layout_marginTop="@dimen/margin_xhdpi_20"
	            android:layout_centerHorizontal="true"/>
	        <TextView 
	            android:id="@+id/tv_lgb_account"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textAppearance="@style/font_white_14"
	            android:layout_alignParentBottom="true"
	            android:layout_marginBottom="@dimen/margin_xhdpi_30"
	            android:layout_centerHorizontal="true"/>
	    </RelativeLayout>
	     <LinearLayout 
				android:layout_width="match_parent"
		    	android:layout_height="@dimen/margin_xhdpi_86"
		    	android:orientation="horizontal"
		    	android:background="@color/white_color">
				<LinearLayout 
				    android:layout_width="0dp"
				    android:layout_weight="1"
		    		android:layout_height="wrap_content"
		    		android:orientation="vertical"
		    		android:gravity="center_horizontal">
				    <TextView
				        android:id="@+id/tv_available"
				        android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:layout_marginTop="@dimen/margin_xhdpi_20"
		    			android:textAppearance="@style/font_222222_25"
		    			android:singleLine="true"
	                    android:ellipsize="end" />
				    <TextView
				        android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:text="@string/user_prod_available"
		    			android:textAppearance="@style/font_757575_12" />
				</LinearLayout>
				<include 
				    layout="@layout/vertical_line_separate"/>
				<LinearLayout 
				    android:layout_width="0dp"
				    android:layout_weight="1"
		    		android:layout_height="wrap_content"
		    		android:orientation="vertical"
		    		android:gravity="center_horizontal">
				    <TextView
				        android:id="@+id/tv_freeze"
				        android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:layout_marginTop="@dimen/margin_xhdpi_20"
		    			android:textAppearance="@style/font_222222_25" 
		    			android:singleLine="true"
	                    android:ellipsize="end"/>
				    <TextView
				        android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:text="@string/user_prod_freeze"
		    			android:textAppearance="@style/font_757575_12" />
				</LinearLayout>
		    </LinearLayout>
	    <include layout="@layout/horizontal_space_separate" />
	
	   <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/white_color"
	        android:orientation="vertical" >
	
	        <com.gxq.tpm.ui.CItemBar
	            android:id="@+id/user_prod_recharge"
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/margin_xhdpi_45"
	            app:itemPaddingLeft="@dimen/margin_xhdpi_15"
	            app:itemPaddingRight="@dimen/margin_xhdpi_15"
	            app:itemShowDetail="true"
	            app:itemTitleText="@string/user_prod_recharge" />
	
	        <include layout="@layout/item_bar_line_separate" />
	
	        <com.gxq.tpm.ui.CItemBar
	            android:id="@+id/user_prod_withdrawals"
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/margin_xhdpi_45"
	            app:itemPaddingLeft="@dimen/margin_xhdpi_15"
	            app:itemPaddingRight="@dimen/margin_xhdpi_15"
	            app:itemShowDetail="true"
	            app:itemTitleText="@string/user_prod_withdrawals"/>
	    </LinearLayout>
	
	    <include layout="@layout/horizontal_space_separate" />
	
	    <com.gxq.tpm.ui.CItemBar
	        android:id="@+id/user_prod_accountflow"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/margin_xhdpi_45"
	        app:itemPaddingLeft="@dimen/margin_xhdpi_15"
	        app:itemPaddingRight="@dimen/margin_xhdpi_15"
	        app:itemShowDetail="true"
	        app:itemTitleText="@string/user_prod_accountflow" />
	
	    <include layout="@layout/item_bar_bottom_line_separate" />
	
	    <TextView
	       	android:id="@+id/tv_foot_view"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	android:paddingTop="@dimen/margin_xhdpi_20"
	    	android:paddingBottom="@dimen/margin_xhdpi_20"
	    	android:textSize="@dimen/font_size_xhdpi_12"
	    	android:textColor="@color/color_ababab" />
	</LinearLayout>
</ScrollView>