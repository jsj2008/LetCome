<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_dialog"
    android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/dialog_bg"
	android:orientation="vertical">
    <RelativeLayout 
        android:id="@+id/container_content"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/margin_xhdpi_130">
		
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/margin_xhdpi_15"
			android:layout_height="@dimen/margin_xhdpi_15"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_marginTop="@dimen/margin_xhdpi_10"
			android:layout_marginRight="@dimen/margin_xhdpi_10"
            android:src="@drawable/layer_close"
            android:scaleType="fitCenter"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xhdpi_15"
            android:layout_marginRight="@dimen/margin_xhdpi_15"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_size_xhdpi_16"
            android:textColor="@color/text_color_title"
            android:drawablePadding="@dimen/margin_xhdpi_6"
            android:gravity="center"
            android:visibility="gone" />
        
        <LinearLayout
            android:id="@+id/container_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xhdpi_15"
            android:layout_marginRight="@dimen/margin_xhdpi_15"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone" >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginTop="@dimen/margin_xhdpi_30"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="@dimen/margin_xhdpi_6"
                style="@style/text_main_style"/>
            
            <TextView
                android:id="@+id/tv_title_content"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginTop="@dimen/margin_xhdpi_20"
            	android:layout_marginBottom="@dimen/margin_xhdpi_30"
                android:layout_gravity="center_horizontal"
                style="@style/text_sub_style"/>
            
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/container_button"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:visibility="gone">
        <include 
        	layout="@layout/horizontal_line_separate"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
			android:layout_height="@dimen/margin_xhdpi_45"
			android:orientation="horizontal">
			<TextView 
			    android:id="@+id/tv_button1"
			    android:layout_width="0dp"
			    android:layout_weight="1"
				android:layout_height="match_parent"
				android:textColor="@color/dialog_btn_text_color_selector"
				android:textSize="@dimen/font_size_xhdpi_16"
				android:gravity="center" />
			
			<LinearLayout
			    android:id="@+id/container_button2"
			    android:layout_width="0dp"
			    android:layout_weight="1"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:visibility="gone">
				<include
				    layout="@layout/vertical_line_separate"/>
				<TextView 
			    	android:id="@+id/tv_button2"
			    	android:layout_width="0dp"
			    	android:layout_weight="1"
					android:layout_height="match_parent"
					android:textColor="@color/dialog_btn_text_color_selector"
					android:textSize="@dimen/font_size_xhdpi_16"
					android:gravity="center" />
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/container_button3"
			    android:layout_width="0dp"
			    android:layout_weight="1"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:visibility="gone">
				<include
				    layout="@layout/vertical_line_separate"/>
				<TextView 
			    	android:id="@+id/tv_button3"
			    	android:layout_width="0dp"
			    	android:layout_weight="1"
					android:layout_height="match_parent"
					android:textColor="@color/dialog_btn_text_color_selector"
					android:textSize="@dimen/font_size_xhdpi_16"
					android:gravity="center" />
			</LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
