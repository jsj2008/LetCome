<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_bg"
    android:orientation="vertical" >
    <include 
        layout="@layout/horizontal_line_separate"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical" >
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/margin_xhdpi_45"
	        android:background="@color/white_color"
	        android:paddingLeft="@dimen/font_size_xhdpi_15"
	        android:paddingRight="@dimen/font_size_xhdpi_15"
	        android:orientation="horizontal" >

        <TextView
            style="@style/text_main_style"
            android:layout_width="@dimen/modifypwd_edit_textview_margin"
            android:layout_height="match_parent"
            android:text="@string/user_modify_pwd_original_pwd"
            android:gravity="left|center_vertical"
            android:textAppearance="@style/font_222222_16" />
         <com.gxq.tpm.ui.PwdCheckEditText
               android:id="@+id/et_original_pwd"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>
    </LinearLayout>

    <include layout="@layout/item_bar_line_separate" />
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_45"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/font_size_xhdpi_15"
            android:paddingRight="@dimen/font_size_xhdpi_15" >

            <TextView
                style="@style/text_main_style"
                android:layout_width="@dimen/modifypwd_edit_textview_margin"
                android:layout_height="match_parent"
                android:text="@string/user_modify_pwd_new_pwd"
                android:gravity="left|center_vertical"
                android:textAppearance="@style/font_222222_16" />
            <com.gxq.tpm.ui.PwdCheckEditText
               android:id="@+id/et_new_pwd"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:hint="@string/user_modify_pwd_new_pwd_hint"/>
           
        </LinearLayout>

        <include layout="@layout/item_bar_line_separate" />

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_45"
            android:layout_marginBottom="@dimen/margin_xhdpi_10"
            android:paddingLeft="@dimen/font_size_xhdpi_15"
            android:paddingRight="@dimen/font_size_xhdpi_15"
            android:orientation="horizontal" >

            <TextView
                style="@style/text_main_style"
                android:layout_width="@dimen/modifypwd_edit_textview_margin"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="@string/user_modify_pwd_confirm_pwd"
                android:textAppearance="@style/font_222222_16" />
            <com.gxq.tpm.ui.PwdCheckEditText
                android:id="@+id/et_confirm_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/user_modify_pwd_confirm_pwd_hint"/>
          
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/horizontal_line_separate" />

    <include layout="@layout/btn_netx_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xhdpi_10" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xhdpi_30"
        android:gravity="center"
        android:text="@string/login_forget_pwd"
        android:textColor="@color/text_color_link"
        android:textSize="@dimen/font_size_xhdpi_12" />

</LinearLayout>