<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gxq.tpm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_bg">
   <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@color/white_color">	
	    <include 
		    layout="@layout/horizontal_line_separate" />		
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_dissent_record"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleText="@string/user_dissent_record"
	    	app:itemShowDetail="true" />
		
		<include 
		    layout="@layout/item_bar_line_separate" />
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_compensate"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleText="@string/user_compensate"
	    	app:itemShowDetail="true" />
		<include 
		    layout="@layout/horizontal_line_separate" />
	</LinearLayout>
</ScrollView>