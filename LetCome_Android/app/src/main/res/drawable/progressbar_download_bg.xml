<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background" >                
		<shape>  
	    	<corners android:radius="@dimen/margin_xhdpi_6" />                 
	        <gradient android:startColor="@color/color_dddddd"                
	              android:endColor="@color/color_dddddd" />                
		</shape>               
	</item>                                  
  
	<!--  设置进度条颜色（白色）  -->                 
	<item  android:id="@android:id/progress" >                
		<clip>                 
	    	<shape>                  
	        	<corners android:radius="@dimen/margin_xhdpi_6" />                  
	    		<gradient android:startColor="@color/btn_selected"                 
	           			android:endColor="@color/btn_selected" />                 
	    	</shape>                
		</clip>               
	</item>         

</layer-list>
