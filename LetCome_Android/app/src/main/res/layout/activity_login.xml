<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context="com.letcome.activity.LoginActivity">
    <Button
        android:id="@+id/close_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_error_red_posting" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/close_btn"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_50">

            <com.gxq.tpm.ui.CTabTitleSelector
                android:id="@+id/tab_title"
                android:layout_width="@dimen/margin_xhdpi_208"
                android:layout_height="@dimen/margin_xhdpi_30"
                android:layout_marginLeft="@dimen/margin_xhdpi_15"
                android:layout_marginRight="@dimen/margin_xhdpi_15"
                android:background="@drawable/tab_title_bg"
                android:layout_centerInParent="true" />
        </RelativeLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/strategy_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
