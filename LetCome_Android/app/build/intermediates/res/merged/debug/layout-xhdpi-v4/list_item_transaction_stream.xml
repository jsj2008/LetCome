<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical" >

    <include 
        android:id="@+id/line_top"
	    layout="@layout/horizontal_line_separate" />
    
	<View 
	    android:id="@+id/view_top"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/margin_xhdpi_10"
    	android:background="@color/product_bg" >
	</View>

	<include 
	    layout="@layout/horizontal_line_separate" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xhdpi_35"
        android:paddingLeft="@dimen/margin_xhdpi_15"
        android:paddingRight="@dimen/margin_xhdpi_15"
        android:gravity="center_vertical" >

       <TextView
           android:id="@+id/tv_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAppearance="@style/font_bebebe_12" />

       <TextView
           android:id="@+id/tv_deal_state"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/font_size_xhdpi_12"
           android:layout_alignParentRight="true" />

    </RelativeLayout>
    <include layout="@layout/item_bar_line_separate"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xhdpi_75"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_xhdpi_15"
        android:paddingRight="@dimen/margin_xhdpi_15"
        android:gravity="center_vertical" >
        <TextView 
            android:id="@+id/deal_type"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textAppearance="@style/font_222222_16"
            android:paddingTop="@dimen/margin_xhdpi_29"/>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5">
            <TextView 
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_xhdpi_14"
                android:layout_marginTop="@dimen/margin_xhdpi_21"/>
            <TextView 
                android:id="@+id/tv_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_222222_14"
                android:layout_marginTop="@dimen/margin_xhdpi_21"
                android:layout_toRightOf="@+id/tv_price"
                android:text="@string/money_unit"/>
            <TextView 
                android:id="@+id/tv_price_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_999999_12"
                android:layout_marginTop="@dimen/margin_xhdpi_40"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView 
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_xhdpi_14"
                android:layout_marginTop="@dimen/margin_xhdpi_21"/>
            <TextView 
                android:id="@+id/tv_amount_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/font_222222_14"
                android:layout_marginTop="@dimen/margin_xhdpi_21"
                android:layout_toRightOf="@+id/tv_amount"
                android:text="@string/stock_amount_unit"/>
            <TextView 
                android:id="@+id/tv_amount_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xhdpi_40"
                android:textAppearance="@style/font_999999_12"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:gravity="right">
            <TextView 
                android:id="@+id/tv_fund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_xhdpi_14"
                android:layout_marginTop="@dimen/margin_xhdpi_21"
                android:layout_alignParentRight="true"/>
            <TextView 
                android:id="@+id/tv_fund_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xhdpi_40"
                android:textAppearance="@style/font_999999_12"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <include 
        android:id="@+id/view_bottom"
        layout="@layout/horizontal_line_separate" />

</LinearLayout>