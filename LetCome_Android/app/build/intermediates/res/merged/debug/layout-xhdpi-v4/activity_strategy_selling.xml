<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView
        android:id="@+id/container_view"
        android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@color/product_bg">
        
        <LinearLayout
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical" >
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/margin_xhdpi_225"
			    android:background="@color/tab_cur_selected"
			    android:orientation="vertical">
			    
			    <include
			        layout="@layout/strategy_investor_stock_item" />
			    
			    <RelativeLayout
			        android:layout_width="@dimen/margin_xhdpi_150"
			        android:layout_height="@dimen/margin_xhdpi_150"
			        android:layout_marginTop="@dimen/margin_xhdpi_10"
			        android:layout_gravity="center_horizontal">
			        
			        <com.gxq.tpm.ui.CCircleProgressBar
			            android:id="@+id/cpb_times"
			            android:layout_width="match_parent"	
			        	android:layout_height="match_parent" />
			        
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentTop="true"
			            android:layout_marginTop="@dimen/margin_xhdpi_30"
			            android:layout_centerHorizontal="true"
			            android:textSize="@dimen/font_size_xhdpi_14"
			            android:textColor="@color/white_color"
			            android:text="@string/strategy_buying_today" />
			        
			        <LinearLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:orientation="horizontal"
			            android:layout_centerInParent="true"
			            android:gravity="center_vertical">
			            <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginRight="@dimen/margin_xhdpi_4"
				            android:textSize="@dimen/font_size_xhdpi_25"
				            android:textColor="@color/white_color"
				            android:text="@string/strategy_today_times1" />
			            <TextView
			                android:id="@+id/tv_today_time"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textSize="@dimen/font_size_xhdpi_50"
				            android:textColor="@color/white_color"/>
			            <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="@dimen/margin_xhdpi_4"
				            android:textSize="@dimen/font_size_xhdpi_25"
				            android:textColor="@color/white_color"
				            android:text="@string/strategy_today_times2" />
			        </LinearLayout>
			        
			        <TextView
			            android:id="@+id/tv_today_limit"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentBottom="true"
			            android:layout_marginBottom="@dimen/margin_xhdpi_30"
			            android:layout_centerHorizontal="true"
			            android:textSize="@dimen/font_size_xhdpi_14"
			            android:textColor="@color/white_color" />
			    </RelativeLayout>
			</LinearLayout>
		    
			<LinearLayout 
			    android:layout_width="match_parent"
		        android:layout_height="@dimen/margin_xhdpi_36"
		        android:background="@color/product_bg"
		        android:gravity="center_vertical">
		    	
		    	<TextView
		    	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginLeft="@dimen/margin_xhdpi_15"
		        	android:textSize="@dimen/font_size_xhdpi_12"
		        	android:textColor="@color/text_color_sub"
		        	android:text="@string/strategy_buying_to_investor" />
			    <TextView
			        android:id="@+id/tv_to_investor_stock_name"
		    	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginLeft="@dimen/margin_xhdpi_4"
		        	android:layout_marginRight="@dimen/margin_xhdpi_4"
		        	android:textSize="@dimen/font_size_xhdpi_12"
		        	android:textColor="@color/text_color_title"
				 />
			    <TextView
		    	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textSize="@dimen/font_size_xhdpi_12"
		        	android:textColor="@color/text_color_sub"
		        	android:text="@string/strategy_selling_title" />	    
			</LinearLayout>
			
			<include layout="@layout/horizontal_line_separate"/>
			
			<LinearLayout
			    android:layout_width="match_parent"
		        android:layout_height="@dimen/margin_xhdpi_110"
		        android:orientation="vertical">
			    <TextView
		    	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="@dimen/margin_xhdpi_25"
		        	android:layout_gravity="center_horizontal"
		        	android:textSize="@dimen/font_size_xhdpi_12"
		        	android:textColor="@color/text_color_sub"
		        	android:text="@string/strategy_to_sell_amout" />
		        <TextView
		            android:id="@+id/tv_to_sell_amount"
		    	    android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="@dimen/margin_xhdpi_1"
		        	android:layout_gravity="center_horizontal"
		        	android:textSize="@dimen/font_size_xhdpi_25"
		        	android:textColor="@color/text_color_tips" />

		       <TextView
		           android:id="@+id/tv_to_buy_start_price"
		           android:layout_width="match_parent"
		           android:layout_height="@dimen/margin_xhdpi_20"
		           android:layout_marginLeft="@dimen/margin_xhdpi_100"
		           android:layout_marginRight="@dimen/margin_xhdpi_100"
		           android:layout_marginTop="@dimen/margin_xhdpi_5"
		           android:gravity="center_horizontal"
		           android:textColor="@color/text_color_sub"
		           android:textSize="@dimen/font_size_xhdpi_12" />

			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/container"
				android:layout_width="match_parent"
			    android:layout_height="@dimen/margin_xhdpi_39"
			    android:layout_marginLeft="@dimen/margin_xhdpi_15"
			   	android:layout_marginRight="@dimen/margin_xhdpi_15"
			   	android:background="@drawable/btn_rect_b3b3b3"
			    android:orientation="horizontal">
		        <TextView
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_marginLeft="@dimen/margin_xhdpi_15"
		    		android:layout_gravity="center_vertical"
		    		android:text="@string/strategy_input_sell_amount"
		            android:textSize="@dimen/font_size_xhdpi_14"
		            android:textColor="@color/text_color_main" />
	        	<RelativeLayout 
	        	    android:layout_width="0dp"
		            android:layout_weight="1"
		    		android:layout_height="match_parent">
			        <EditText
			            android:id="@+id/et_input_fund"
			            android:layout_width="match_parent"
			    		android:layout_height="wrap_content"
			    		android:layout_marginRight="@dimen/margin_xhdpi_15"
			    		android:layout_centerVertical="true"
			            android:textSize="@dimen/font_size_xhdpi_14"
			            android:textColor="@color/text_color_main"
			            android:hint="@string/strategy_input_sell_amount_hint"
			            android:textColorHint="@color/color_cccccc"
			            android:focusable="false"
			            android:focusableInTouchMode="false"
			            android:background="@color/white_color"
			            android:inputType="numberDecimal" />
		     		<View
			        	android:id="@+id/container_input_fund"
			        	android:layout_width="match_parent"
			    		android:layout_height="match_parent"/>   	    	        	    
		      	</RelativeLayout>
			</LinearLayout>
			    
		    <RelativeLayout 
		       	android:layout_width="match_parent"
			    android:layout_height="@dimen/margin_xhdpi_60">
		     	<com.gxq.tpm.ui.CTabTitleSelector
			    	android:id="@+id/container_fund"
			    	android:layout_width="match_parent"
		    		android:layout_height="@dimen/margin_xhdpi_30"
		    		android:layout_marginLeft="@dimen/margin_xhdpi_15"
		    		android:layout_marginRight="@dimen/margin_xhdpi_15"
		    		android:layout_centerInParent="true"/>   
		    </RelativeLayout>
			
			<RelativeLayout 
			    android:id="@+id/bottom_container"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="@dimen/margin_xhdpi_5"
			    android:paddingBottom="@dimen/margin_xhdpi_15"
			    android:orientation="horizontal">
		     	
	            <TextView 
	                android:id="@+id/cur_price"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_alignParentTop="true"
	            	android:layout_alignParentLeft="true"
	            	android:layout_marginLeft="@dimen/margin_xhdpi_15"
	            	android:text="@string/strategy_cur_price"
	            	android:textSize="@dimen/font_size_xhdpi_12"
	            	android:textColor="@color/text_color_sub" />
	            <TextView 
	                android:id="@+id/tv_cur_price"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_alignParentTop="true"
	            	android:layout_toRightOf="@id/cur_price"
	            	android:layout_marginLeft="@dimen/margin_xhdpi_4"
	            	android:textSize="@dimen/font_size_xhdpi_12"
	            	android:textColor="@color/text_color_main" />
			</RelativeLayout>
            
        </LinearLayout>
    </ScrollView>
    
    <include 
        layout="@layout/horizontal_line_separate" />
    
	<include 
	    layout="@layout/btn_netx_step" />    
    
</LinearLayout>
