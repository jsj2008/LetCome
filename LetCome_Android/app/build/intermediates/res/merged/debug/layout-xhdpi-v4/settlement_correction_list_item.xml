<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_xhdpi_45"
    android:orientation="vertical"
    android:background="@color/white_color" >
    <include 
        android:id="@+id/view_line_top"
        layout="@layout/horizontal_line_separate" />
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
        android:layout_weight="1"
    	android:layout_marginLeft="@dimen/margin_xhdpi_15"
    	android:layout_marginRight="@dimen/margin_xhdpi_15"
    	android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_settlement_time"
            android:layout_width="0dp"
            android:layout_weight="105"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/font_size_xhdpi_14"
            android:textColor="@color/text_color_title" />

        <TextView
            android:id="@+id/tv_settlement_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:gravity="left|center_vertical"
			android:textSize="@dimen/font_size_xhdpi_14"
            android:textColor="@color/text_color_title" />

        <TextView
            android:id="@+id/tv_settlement_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="56"
            android:gravity="left|center_vertical"
			android:textSize="@dimen/font_size_xhdpi_14"
            android:textColor="@color/text_color_title" />
        
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60">
            <TextView
            	android:id="@+id/tv_settlement_pay"
            	android:layout_width="@dimen/margin_xhdpi_60"
            	android:layout_height="@dimen/margin_xhdpi_30"
            	android:layout_centerInParent="true"
            	android:gravity="center"
            	android:text="@string/compensate_paid"
           		android:textSize="@dimen/font_size_xhdpi_14"
    	        android:textColor="@color/white_color"
    	        android:background="@drawable/btn_next_step_selector" />
            <TextView
            	android:id="@+id/tv_settlement_operation"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerInParent="true"
           		android:textSize="@dimen/font_size_xhdpi_14"
    	        android:textColor="@color/text_color_title"
    	        android:visibility="gone" />
	    </RelativeLayout>
	</LinearLayout>
    <include
         android:id="@+id/view_line"
         layout="@layout/item_bar_line_separate" />
    <include
         android:id="@+id/view_bottom"
         layout="@layout/horizontal_line_separate" />
</LinearLayout>