<com.gxq.tpm.ui.CScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/id_stickynavlayout_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/product_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_stock_ad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_144" >

            <com.gxq.tpm.ui.ImageCycleView
                android:id="@+id/image_cycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/banner_loading" />
        </RelativeLayout>

        <include layout="@layout/horizontal_line_separate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_80"
            android:background="@color/white_color"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_stock_hs300"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_hq_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_marginTop="@dimen/margin_xhdpi_12"
                    android:text="@string/product_home_hq_szzs"
                    android:textAppearance="@style/font_000000_12" />

                <TextView
                    android:id="@+id/tv_hq_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hq_name_1"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_marginTop="@dimen/margin_xhdpi_4"
                    android:text="@string/default_value"
                    android:textSize="@dimen/font_size_xhdpi_18" />

                <TextView
                    android:id="@+id/tv_diff_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hq_1"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_marginTop="@dimen/margin_xhdpi_4"
                    android:text="@string/default_value"
                    android:textSize="@dimen/font_size_xhdpi_10" />

                <TextView
                    android:id="@+id/tv_ratio_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_diff_1"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_toRightOf="@id/tv_diff_1"
                    android:text="@string/default_value"
                    android:textSize="@dimen/font_size_xhdpi_10" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/vertical_line_separate_width"
                android:layout_height="match_parent"
                android:background="@color/line_seperate_color" />

            <RelativeLayout
                android:id="@+id/rl_stock_cyb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_hq_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_marginTop="@dimen/margin_xhdpi_12"
                    android:text="@string/product_home_hq_szcz"
                    android:textAppearance="@style/font_000000_12" />

                <TextView
                    android:id="@+id/tv_hq_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hq_name_2"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_marginTop="@dimen/margin_xhdpi_4"
                    android:text="@string/default_value"
                    android:textSize="@dimen/font_size_xhdpi_18" />

                <TextView
                    android:id="@+id/tv_diff_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hq_2"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_marginTop="@dimen/margin_xhdpi_4"
                    android:text="@string/default_value"
                    android:textSize="@dimen/font_size_xhdpi_10" />

                <TextView
                    android:id="@+id/tv_ratio_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_diff_2"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_toRightOf="@id/tv_diff_2"
                    android:text="@string/default_value"
                    android:textSize="@dimen/font_size_xhdpi_10" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/vertical_line_separate_width"
                android:layout_height="match_parent"
                android:background="@color/line_seperate_color" />

            <RelativeLayout
                android:id="@+id/rl_stock_zxb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_hq_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_marginTop="@dimen/margin_xhdpi_12"
                    android:text="@string/product_home_hq_cyb"
                    android:textAppearance="@style/font_000000_12" />

                <TextView
                    android:id="@+id/tv_hq_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hq_name_3"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_marginTop="@dimen/margin_xhdpi_4"
                    android:text="@string/default_value"
                    android:textSize="@dimen/font_size_xhdpi_18" />

                <TextView
                    android:id="@+id/tv_diff_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_hq_3"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_marginTop="@dimen/margin_xhdpi_4"
                    android:text="@string/default_value"
                    android:textSize="@dimen/font_size_xhdpi_10" />

                <TextView
                    android:id="@+id/tv_ratio_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_diff_3"
                    android:layout_marginLeft="@dimen/margin_xhdpi_15"
                    android:layout_toRightOf="@id/tv_diff_3"
                    android:text="@string/default_value"
                    android:textSize="@dimen/font_size_xhdpi_10" />
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/horizontal_space_separate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_xhdpi_44"
            android:background="@color/white_color"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_xhdpi_29"
                android:layout_marginLeft="@dimen/margin_xhdpi_10"
                android:layout_marginRight="@dimen/margin_xhdpi_10"
                android:alpha="0.7"
                android:background="@color/product_bg"
                android:drawableLeft="@drawable/item_search"
                android:drawablePadding="@dimen/margin_xhdpi_5"
                android:gravity="left|center"
                android:hint="@string/search_text_hint"
                android:paddingLeft="@dimen/margin_xhdpi_5"
                android:textColorHint="@color/text_color_info"
                android:textSize="@dimen/font_size_xhdpi_12" />
        </LinearLayout>

        <include layout="@layout/horizontal_line_separate" />

        <LinearLayout 
            android:id="@+id/listview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            
            <com.gxq.tpm.ui.CListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none" />
            
        </LinearLayout>
        

        <include layout="@layout/horizontal_line_separate" />

        <ImageView
            android:id="@+id/iv_listdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_xhdpi_6"
            android:src="@drawable/item_listdown" />
    </LinearLayout>

</com.gxq.tpm.ui.CScrollView>