<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gxq.tpm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_bg"
    android:orientation="vertical" >
    <include layout="@layout/horizontal_line_separate"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/margin_xhdpi_80"
            android:layout_height="@dimen/margin_xhdpi_80"
            android:layout_marginTop="@dimen/margin_xhdpi_30"
            android:src="@drawable/about_icon"
            android:scaleType="fitCenter" >
        </ImageView>

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xhdpi_10"
             android:layout_marginBottom="@dimen/margin_xhdpi_30"
            android:orientation="horizontal">
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/app_name"
	            android:textSize="@dimen/font_size_xhdpi_12"
	            android:textColor="@color/text_color_sub" />
            <TextView
	            android:id="@+id/tv_version"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/margin_xhdpi_8"
	            android:textSize="@dimen/font_size_xhdpi_12"
	            android:textColor="@color/text_color_sub" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@color/white_color">
		<include 
	        layout="@layout/horizontal_line_separate" />
	
	    <com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_platform_agreement"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleText="@string/user_platform_agreement"
	    	app:itemShowDetail="true"/>
		
		<include 
			layout="@layout/item_bar_line_separate" />
		
		<com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_investor_agreement"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleText="@string/user_investor_agreement"
	    	app:itemShowDetail="true"/>
		
		<include 
			layout="@layout/item_bar_line_separate" />
		
	    <com.gxq.tpm.ui.CItemBar
		    android:id="@+id/user_privacy_clause"
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/margin_xhdpi_45"
	    	app:itemTitleText="@string/user_privacy_clause"
	    	app:itemShowDetail="true" />
	    
	    <include 
	        layout="@layout/horizontal_line_separate" />
    </LinearLayout>   
</LinearLayout>