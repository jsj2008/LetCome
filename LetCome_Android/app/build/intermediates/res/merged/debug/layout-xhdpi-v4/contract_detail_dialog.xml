<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_xhdpi_10"
    android:paddingBottom="@dimen/margin_xhdpi_30"
    android:paddingLeft="@dimen/margin_xhdpi_10"
    android:paddingRight="@dimen/margin_xhdpi_10"
    android:layout_marginTop="@dimen/margin_xhdpi_40"
    android:layout_marginBottom="@dimen/margin_xhdpi_40"
    android:background="@drawable/dialog_bg" >

    <ImageView
        android:id="@+id/iv_agreement_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/layer_close" />


    <TextView
        android:id="@+id/agreement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xhdpi_30"
        android:layout_marginLeft="@dimen/margin_xhdpi_15"
        android:layout_marginRight="@dimen/margin_xhdpi_15"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/font_size_xhdpi_18" />

    <WebView
        android:id="@+id/agreement_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/agreement_title"
        android:layout_marginLeft="@dimen/margin_xhdpi_10"
        android:layout_marginRight="@dimen/margin_xhdpi_10"
        android:layout_marginTop="@dimen/margin_xhdpi_25" />

</RelativeLayout>
