<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/product_bg" >
    <include  layout="@layout/horizontal_line_separate" />
    <ScrollView 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
    	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/white_color"
			    android:orientation="vertical"
			    android:paddingLeft="@dimen/margin_xhdpi_15"
			    android:paddingRight="@dimen/margin_xhdpi_15" >
			
			    <RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/layout_item_height"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentLeft="true"
			            android:text="@string/dissent_pid"
			            android:textAppearance="@style/font_222222_16" />
			
			        <TextView
			            android:id="@+id/tv_dissent_pid"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentRight="true"
			            android:textAppearance="@style/font_757575_14" />
			    </RelativeLayout>
			
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/horizontal_line_separate_height"
			        android:background="@color/line_seperate_color" />
			    
			    <RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/layout_item_height"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentLeft="true"
			            android:text="@string/dissent_create_time"
			            android:textAppearance="@style/font_222222_16" />
			
			        <TextView
			            android:id="@+id/tv_dissent_create_time"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentRight="true"
			            android:textAppearance="@style/font_757575_14" />
			    </RelativeLayout>
			
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/horizontal_line_separate_height"
			        android:background="@color/line_seperate_color" />
			    			    
			    <RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/layout_item_height"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentLeft="true"
			            android:text="@string/dissent_result"
			            android:textAppearance="@style/font_222222_16" />
			
			        <TextView
			            android:id="@+id/tv_dissent_result"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentRight="true"
			            android:textAppearance="@style/font_757575_14" />
			    </RelativeLayout>
			    
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/horizontal_line_separate_height"
			        android:background="@color/line_seperate_color" />
			    
			    <RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/layout_item_height"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentLeft="true"
			            android:text="@string/dissent_need_correct"
			            android:textAppearance="@style/font_222222_16" />
			
			        <TextView
			            android:id="@+id/tv_dissent_need_correct"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentRight="true"
			            android:textAppearance="@style/font_757575_14"/>
			    </RelativeLayout>
			   
			</LinearLayout>
			<include 
		            layout="@layout/horizontal_space_separate" />
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/white_color"
			    android:orientation="vertical"
			    android:paddingLeft="@dimen/margin_xhdpi_15"
			    android:paddingRight="@dimen/margin_xhdpi_15" >
		
			    <RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/layout_item_height"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentLeft="true"
			            android:text="@string/dissent_point"
			            android:textAppearance="@style/font_222222_16"/>
			
			        <TextView
			            android:id="@+id/tv_dissent_point"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentRight="true"
			            android:textAppearance="@style/font_757575_14"/>
			    </RelativeLayout>
			    
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/horizontal_line_separate_height"
			        android:background="@color/line_seperate_color" />
			    
			  	<RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal" >
			        
			        <TextView
			            android:id="@+id/tv_dissent_point_desc"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_alignParentTop="true"
			            android:layout_marginBottom="@dimen/margin_xhdpi_14"
			            android:layout_marginTop="@dimen/margin_xhdpi_14"
			            android:text="@string/dissent_point_desc"
			            android:textAppearance="@style/font_ababab_14" />
			        <TextView
			            android:id="@+id/tv_dissent_point_message"
			            android:layout_below="@id/tv_dissent_point_desc"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:textAppearance="@style/font_222222_16"/>
			    </RelativeLayout>
			    <View
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/margin_xhdpi_14" />
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/dissent_comment_container"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/white_color"
			    android:orientation="vertical"
			    android:paddingLeft="@dimen/margin_xhdpi_15"
			    android:paddingRight="@dimen/margin_xhdpi_15" >
		        <View
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/horizontal_line_separate_height"
			        android:background="@color/line_seperate_color" />
		        <RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal" >
				    <TextView
			            android:id="@+id/tv_dissent_comment"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_alignParentTop="true"
			            android:layout_marginBottom="@dimen/margin_xhdpi_14"
			            android:layout_marginTop="@dimen/margin_xhdpi_14"
			            android:text="@string/dissent_point_comment"
			           	android:textAppearance="@style/font_ababab_14" />
			        <TextView
			            android:id="@+id/tv_dissent_comment_message"
			            android:layout_below="@id/tv_dissent_comment"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:textAppearance="@style/font_222222_16"/>
			    </RelativeLayout>
				<View
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/margin_xhdpi_14" />
		    </LinearLayout>
		    <include  layout="@layout/horizontal_line_separate" />
    	</LinearLayout>
	</ScrollView>
</LinearLayout>