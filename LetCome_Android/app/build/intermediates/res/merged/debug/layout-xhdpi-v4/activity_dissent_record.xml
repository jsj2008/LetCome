<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gxq.tpm"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include 
        android:id="@+id/view_topline"
        layout="@layout/horizontal_line_separate"/>
   <LinearLayout
        android:id="@+id/container_dissent" 
        android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/product_bg"
	    android:visibility="gone"
	    android:layout_below="@+id/view_topline">
        <LinearLayout 
	        android:layout_width="match_parent"
		    android:layout_height="@dimen/margin_xhdpi_36"
		    android:background="@color/product_bg"
		    android:paddingLeft="@dimen/font_size_xhdpi_15"
		    android:paddingRight="@dimen/font_size_xhdpi_15">
	        
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1.4"
	            android:gravity="center_vertical|left"
	            android:text="@string/dissent_create_time"
	            android:textAppearance="@style/font_ababab_14" />
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1.2"
	            android:gravity="center_vertical|left"
	            android:text="@string/dissent_point"
	            android:textAppearance="@style/font_ababab_14" />
	        <TextView 
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:gravity="center_vertical|right"
	            android:text="@string/dissent_result"
	            android:textAppearance="@style/font_ababab_14"/>
	    </LinearLayout>
	    <include layout="@layout/horizontal_line_separate" />
        <include
	        android:id="@+id/dissent_list" 
	        layout="@layout/listview" />
      
    </LinearLayout>
    
    <com.gxq.tpm.ui.CEmptyNoteView
        android:id="@+id/list_empty_container"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    app:src_text="@string/empty_dissent_list"
	    android:layout_below="@+id/view_topline" />
    
    

</RelativeLayout>

