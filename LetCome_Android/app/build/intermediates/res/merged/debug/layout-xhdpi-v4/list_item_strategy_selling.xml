<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
        android:id="@+id/head"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:visibility="gone">
    	
        <View
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/margin_xhdpi_20"
		    android:background="@color/product_bg" />
        
        <include 
        	layout="@layout/horizontal_line_separate"/>
    </LinearLayout>
    	
    
    <include 
        layout="@layout/list_item_strategy_pno" />
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@color/white_color">
    	<include 
        	layout="@layout/list_item_strategy_investor" />

	   	<include 
	    	layout="@layout/horizontal_inside_line_separate"/>
	   
		<LinearLayout 
		   	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="@dimen/margin_xhdpi_20"
    		android:layout_marginLeft="@dimen/margin_xhdpi_15"
    		android:layout_marginRight="@dimen/margin_xhdpi_15"
    		android:orientation="horizontal">
		    <TextView
		        android:layout_width="0dp"
		        android:layout_weight="14"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_sub"
		        android:text="@string/strategy_to_sell_amount"
		        android:gravity="left" />
		    <TextView
		        android:layout_width="0dp"
		        android:layout_weight="11"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_sub"
		        android:text="@string/strategy_selled_amount"
		        android:gravity="left" />
		    <TextView
		        android:layout_width="0dp"
		        android:layout_weight="8"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_sub"
		        android:text="@string/strategy_total_amount"
		        android:gravity="left" />
		</LinearLayout>
        <LinearLayout 
		   	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="@dimen/margin_xhdpi_2"
    		android:layout_marginLeft="@dimen/margin_xhdpi_15"
    		android:layout_marginRight="@dimen/margin_xhdpi_15"
    		android:gravity="center_vertical"
    		android:orientation="horizontal">
		    <TextView
		        android:id="@+id/tv_to_sell_amount"
		        android:layout_width="0dp"
		        android:layout_weight="14"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/font_size_xhdpi_18"
		        android:textColor="@color/text_color_tips"
		        android:gravity="left" />
		    <TextView
		        android:id="@+id/tv_selled_amount"
		        android:layout_width="0dp"
		        android:layout_weight="11"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/font_size_xhdpi_14"
		        android:textColor="@color/text_color_title"
		        android:gravity="left" />
		    <TextView
		        android:id="@+id/tv_total_amount"
		        android:layout_width="0dp"
		        android:layout_weight="8"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/font_size_xhdpi_14"
		        android:textColor="@color/text_color_title"
		        android:gravity="left" />
		</LinearLayout>
		
        <LinearLayout 
		   	android:layout_width="match_parent"
    		android:layout_height="@dimen/margin_xhdpi_30"
    		android:layout_marginTop="@dimen/margin_xhdpi_16"
    		android:layout_marginLeft="@dimen/margin_xhdpi_15"
    		android:layout_marginRight="@dimen/margin_xhdpi_15"
    		android:orientation="horizontal" >
		    <TextView
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:layout_marginRight="@dimen/margin_xhdpi_1"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_sub"
		        android:text="@string/strategy_buy_price"
		        android:gravity="center"
		        android:background="@color/color_ebebeb" />
		    <TextView
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:layout_marginRight="@dimen/margin_xhdpi_1"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_sub"
		        android:text="@string/strategy_sell_price"
		        android:gravity="center"
		        android:background="@color/color_ebebeb" />
		    <TextView
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_sub"
		        android:text="@string/strategy_cur_price"
		        android:gravity="center"
		        android:background="@color/color_ebebeb" />
		</LinearLayout>
		<LinearLayout 
		   	android:layout_width="match_parent"
    		android:layout_height="@dimen/margin_xhdpi_30"
    		android:layout_marginLeft="@dimen/margin_xhdpi_15"
    		android:layout_marginRight="@dimen/margin_xhdpi_15"
    		android:layout_marginBottom="@dimen/margin_xhdpi_25"
    		android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/tv_buy_price"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:layout_marginRight="@dimen/margin_xhdpi_1"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_main"
		        android:gravity="center"
		        android:background="@color/color_fafafa" />
		    <TextView
		        android:id="@+id/tv_sell_price"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:layout_marginRight="@dimen/margin_xhdpi_1"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_main"
		        android:gravity="center"
		        android:background="@color/color_fafafa" />
		    <TextView
		        android:id="@+id/tv_cur_price"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_main"
		        android:gravity="center"
		        android:background="@color/color_fafafa" />
		</LinearLayout>
		
		<include 
        	layout="@layout/horizontal_line_separate" />
		
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/margin_xhdpi_95">
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_marginTop="@dimen/margin_xhdpi_15"
		        android:layout_centerHorizontal="true"
		        android:text="@string/strategy_profit"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_sub" />

		    <TextView
		        android:id="@+id/tv_profit"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:text="@string/default_value"
		        android:textSize="@dimen/font_size_xhdpi_25"
		        android:textColor="@color/text_color_sub" />
		    		    
			<TextView
			    android:id="@+id/tv_profit_ratio"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_marginBottom="@dimen/margin_xhdpi_15"
		        android:layout_centerHorizontal="true"
		        android:text="@string/default_value"
		        android:textSize="@dimen/font_size_xhdpi_12"
		        android:textColor="@color/text_color_sub"/>
		</RelativeLayout>

		<Button 
		    android:id="@+id/btn_next_step"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/margin_xhdpi_44"
		    android:layout_marginBottom="@dimen/margin_xhdpi_15"
		    android:layout_marginLeft="@dimen/margin_xhdpi_15"
		    android:layout_marginRight="@dimen/margin_xhdpi_15"
		    android:textColor="@color/text_next_step_selector"
		    android:textSize="@dimen/font_size_xhdpi_16"
		    android:gravity="center"
		    android:background="@drawable/btn_next_step_selector" />
		
		<ProgressBar 
		    android:id="@+id/pb_strategy"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/margin_xhdpi_2"
		    style="?android:attr/progressBarStyleHorizontal" 
		    android:max="5"
		    android:progressDrawable="@drawable/progressbar_strategy_bg" />
	</LinearLayout>
	
	<include 
        layout="@layout/horizontal_line_separate"/>
    
</LinearLayout>
