<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_xhdpi_105"
    android:background="@drawable/item_choose_stock" >

    <View
        android:id="@+id/item_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_item_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xhdpi_12"
        android:textAppearance="@style/font_222222_14" />

    <TextView
        android:id="@+id/tv_item_stock_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_stock_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xhdpi_2"
        android:textAppearance="@style/font_ababab_10" />

    <TextView
        android:id="@+id/tv_item_cur_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_stock_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xhdpi_2"
        android:textColor="@color/gain_color"
        android:textSize="@dimen/font_size_xhdpi_20" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_cur_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xhdpi_2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_item_price_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/font_222222_10" />

        <TextView
            android:id="@+id/tv_item_price_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xhdpi_10"
            android:textAppearance="@style/font_222222_10" />
    </LinearLayout>

</RelativeLayout>