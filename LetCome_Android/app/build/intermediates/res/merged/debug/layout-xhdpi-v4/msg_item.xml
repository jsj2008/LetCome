<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_xhdpi_45"
    android:orientation="vertical"
	android:background="@drawable/item_bar_bg_selctor" >
    <include 
        android:id="@+id/view_line_top"
	    layout="@layout/horizontal_line_separate"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
	    
	    <TextView
	        android:id="@+id/tv_msg_title"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_marginLeft="@dimen/margin_xhdpi_15"
	        android:layout_marginRight="@dimen/margin_xhdpi_25"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"
	        android:textSize="@dimen/font_size_xhdpi_14" />
	        
	    <TextView
		    android:id="@+id/tv_msg_time"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="@dimen/margin_xhdpi_15"
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"
	        android:textSize="@dimen/font_size_xhdpi_12" />
	</LinearLayout>
    
	<include 
	    layout="@layout/horizontal_line_separate"/>
	
</LinearLayout>