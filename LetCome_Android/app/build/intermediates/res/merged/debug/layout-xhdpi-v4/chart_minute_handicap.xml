<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >
	    <com.gxq.tpm.ui.chart.MinuteChart
	        android:id="@+id/chart_minute"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="3" />
		<com.gxq.tpm.ui.chart.MinuteVolumeStickChart
	    	android:id="@+id/chart_minute_v"
	    	android:layout_width="match_parent"
        	android:layout_height="0dp"
	        android:layout_weight="1"/>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/ll_chart_handicap"
	 	android:layout_width="@dimen/margin_xhdpi_125"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
    	<com.gxq.tpm.ui.CStockHandicapView 
        	android:id="@+id/stock_chart_handicap_sell"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:orientation="vertical"
        	android:background="@color/color_f8f8f8" />
    	
    	<View
    	    android:layout_width="match_parent"
    		android:layout_height="@dimen/horizontal_line_separate_height"
    		android:background="@color/color_f0f0f0" />
    		
    	<com.gxq.tpm.ui.CStockHandicapView 
        	android:id="@+id/stock_chart_handicap_buy"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	android:orientation="vertical"
        	android:background="@color/color_f8f8f8" />
    </LinearLayout>
    
</LinearLayout>
