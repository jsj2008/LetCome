#import "GestureUtil.h"
#import "GestureHeader.h"
@implementation GestureUtil
+(BOOL)isPwdExisted{
    
    NSUserDefaults* userDefaults = [NSUserDefaults standardUserDefaults];
    NSString * userDefaultsKey = kTEST_ACOUNT_KEY;
    NSString * userDefaultsValue = [userDefaults objectForKey:userDefaultsKey];
    if (userDefaultsValue.length>1) {
        
        return YES;
    }
    
    return NO;
}

+(BOOL)isPwdOn{
    NSUserDefaults* userDefaults = [NSUserDefaults standardUserDefaults];
    NSString * userDefaultsKey = kTEST_ACOUNT_USE;
    NSString * value = [userDefaults objectForKey:userDefaultsKey];
    if(value==nil || [value isEqualToString:@"YES"]){
        return YES;
    }else{
       return NO;
    }
}

+(BOOL)removePassword{
    NSUserDefaults* userDefaults = [NSUserDefaults standardUserDefaults];
    [userDefaults removeObjectForKey:kTEST_ACOUNT_KEY];
    [userDefaults synchronize];
    return YES;
}


@end
