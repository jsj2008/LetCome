- (IBAction)loginClicked:(id)sender {
    [self.nickName resignFirstResponder];
    validateObject* nick = [validateObject object];
    nick.value = self.nickName.text;
    ValidateCPBNickName* validNickname = [ValidateCPBNickName  validateWithObject:nick];
    BOOL result = [validNickname validate];
    if (!result) {
//        [WpCommonFunction showNotifyHUDAtViewBottom:self.view withErrorMessage:@"昵称设置错误"];
        [WpCommonFunction showNotifyHUDAtViewBottom:self.view withErrorMessage:@"昵称为2-6个汉字"];
    }else{
        [[ViewControllerManager sharedManager] showWaitView:self.view];
        [self.manager saveNickName:self.nickName.text returnBlock:^(ReturnValue *val, QUMock *mock, QUEntity *entity) {
            [[ViewControllerManager sharedManager] hideWaitView];
            if ([mock isMemberOfClass:[NickNameMock class]]) {
                NickNameEntity *e = (NickNameEntity*)entity;
                if ([e.result isEqualToString:@"Y"]) {
                    NSUserDefaults *def = [NSUserDefaults standardUserDefaults];
                    [def setObject:self.manager.nickParam.nickname forKey:kUserNickName];
                    self.manager.myEntity.nick_name = self.manager.nickParam.nickname;
                    [self dismissViewControllerAnimated:YES completion:nil];
                    if ([self.delegate respondsToSelector:@selector(MyViewControllerOnBack)]) {
                        [self.delegate MyViewControllerOnBack];
                    }
                }else{
                    [WpCommonFunction showNotifyHUDAtViewBottom:self.view withErrorMessage:@"昵称为2-6个汉字"];
                }
            }

        }];
    }
}


#pragma mark UITextFieldDelegate Method
- (void)textFieldDidEndEditing:(UITextField *)textField;
{
    [self animateTextField:textField up:NO];
}


- (BOOL)textFieldShouldBeginEditing:(UITextField *)textField{
    [self animateTextField:textField up:YES];
    return YES;
}

/*s输入验证码上移动画*/
- (void) animateTextField: (UITextField*) textField up: (BOOL) up

{
    const int movementDistance = 150; // tweak as needed
    
    const float movementDuration = 0.3f; // tweak as needed

    int movement = (up ? -movementDistance : movementDistance);
    
    [UIView beginAnimations: @"anim" context: nil];
    
    [UIView setAnimationBeginsFromCurrentState: YES];
    
    [UIView setAnimationDuration: movementDuration];
    
    self.view.frame = CGRectOffset(self.view.frame, 0, movement);
    
    [UIView commitAnimations];
    
}

-(void)touchesBegan:(NSSet *)touches withEvent:(UIEvent *)event{
    [self resignAllTextFieldFirstResponder];
}
-(void)resignAllTextFieldFirstResponder{
    [self.nickName resignFirstResponder];
}



