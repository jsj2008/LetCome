@implementation BuildStrategyChooseSesction

-(void)awakeFromNib
{
    [super awakeFromNib];
    
    self.textFieldView.layer.borderWidth = 1;
    self.textFieldView.layer.borderColor = [UIColor grayColor].CGColor;
    self.textFieldView.layer.cornerRadius = 3;
    self.textFieldView.layer.masksToBounds = YES;
    
    
}

-(void)sectionDidLoad
{
    [super sectionDidLoad];
    
    self.inputFundTextField.delegate = self;
    
    if ([self.inputFundTextField isFirstResponder]) {
        
        [self.inputFundTextField resignFirstResponder];
    }
}



#pragma mark - STOKeyBoradDelegate

-(void)confirmFunc{
    
    [self.keyBoard removeFromSuperview];
    [self closeFunc];
    
    
    if (self.inputFundTextField.text.floatValue == 0) {
        
        self.inputFundTextField.text = @"0";
    }
    
    [[NSNotificationCenter defaultCenter]postNotificationName:KBuildKeyBoardConfirm object:nil];
    
}

-(void)closeFunc{
    
    [self animateTextField:nil up:NO];
}

-(void)textChangeTo:(NSString *)text
{
    [self checkConfirm];
}

-(void)textHasChanged
{
    [self checkConfirm];
    if (self.bll.entity.profitEntity) {
        float maxPrice = self.bll.entity.profitEntity.y_close.floatValue * 1.1;//涨停价
        NSInteger stockAmount = self.inputFundTextField.text.intValue / maxPrice;
        self.buyStockAmountLabel.text = [NSString stringWithFormat:@"%ld股",(long)stockAmount];
        
    }
}

-(void)rightFunc
{
    //self.inputFundTextField.text = @"750000";
    [self.keyBoard closeKeyBoard];
    [[NSNotificationCenter defaultCenter]postNotificationName:KBuildKeyBoardChooseAll object:nil];
}

#pragma mark - UITextFieldDelegate

-(BOOL)textFieldShouldBeginEditing:(UITextField *)textField{
    
    UIColor *blue=[UIColor colorWithRed:20.0/255.0 green:128.0/255.0 blue:250.0/255.0 alpha:1.0];
    self.keyBoard=[STOKeyBoard keyBoardForTextField:self.inputFundTextField];
    self.keyBoard.keyBoardDelegate=self;
    //[self.keyBoard.btnLeft setTitle:@"0" forState:UIControlStateNormal];
    //[self.keyBoard.btnLeft setTitleColor:blue forState:UIControlStateNormal];
    
    [self.keyBoard.btnRight setTitle:@"全额" forState:UIControlStateNormal];
    
    [self.keyBoard.btnConfirm setTitle:@"确认" forState:UIControlStateNormal];
    [self setBtn:self.keyBoard.btnConfirm enabled:YES];
    [self.keyBoard filterNumber];
    
    [self checkConfirm];
    
    [self animateTextField:nil up:YES];
    
    UIWindow *window = [[[UIApplication sharedApplication] windows] objectAtIndex:0];
    [window addSubview:self.keyBoard];
    
    //可选股数
    if (self.bll.entity.profitEntity) {
        float maxPrice = self.bll.entity.profitEntity.y_close.floatValue * 1.1;//涨停价
        NSInteger stockAmount = self.inputFundTextField.text.intValue / maxPrice;
        self.buyStockAmountLabel.text = [NSString stringWithFormat:@"%ld股",(long)stockAmount];
        
    }
    
    [self setAllBtnsUnselected];
    
    return NO;
}




#pragma mark - private
- (void) animateTextField: (UITextField*) textField up: (BOOL) up
{
    const int movementDistance = 155; // tweak as needed
    const float movementDuration = 0.3f; // tweak as needed
    int movement = (up ? -movementDistance : movementDistance);
    [UIView beginAnimations: @"anim" context: nil];
    [UIView setAnimationBeginsFromCurrentState: YES];
    [UIView setAnimationDuration: movementDuration];
    self.controller.view.frame = CGRectOffset(self.controller.view.frame, 0, movement);
    if (!up) {
        [[NSNotificationCenter defaultCenter] postNotificationName:KBuildKeyBOardHide object:nil];
    }

    
    [UIView commitAnimations];
}

-(void)setBtn:(UIButton *)btn enabled:(BOOL)enable{
    if (enable) {
        [btn setEnabled:YES];
        [btn setBackgroundColor:[UIColor colorWithRed:64.0/255.0 green:116.0/255.0 blue:236.0/255.0 alpha:1.0]];
        [btn setTitleColor:[UIColor whiteColor] forState:UIControlStateNormal];
        
    }else{
        [btn setEnabled:NO];
        [btn setBackgroundColor:[UIColor colorWithRed:224.0/255.0 green:224.0/255.0 blue:224.0/255.0 alpha:1.0]];
        [btn setTitleColor:[UIColor colorWithRed:190.0/255.0 green:190.0/255.0 blue:190.0/255.0 alpha:1.0] forState:UIControlStateNormal];
        
    }
}

-(void)checkConfirm{
    [self setBtn:self.keyBoard.btnConfirm enabled:(self.inputFundTextField.text.integerValue>0)];
    
}

- (void)setAllBtnsUnselected
{
    for (UIButton *btn in self.buttonsView.subviews) {
        
        btn.selected = NO;
    }
}


