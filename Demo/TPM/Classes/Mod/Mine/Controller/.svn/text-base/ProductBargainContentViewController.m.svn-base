#import "ProductBargainContentViewController.h"
#import "UIBarButtonItem+YL.h"

@interface ProductBargainContentViewController ()

@end

@implementation ProductBargainContentViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    
    self.title=@"异议内容";
    
    int leftheight=[UIScreen mainScreen].bounds.size.height-190-64-45;
    self.barginView.frame=CGRectMake(0, 190, self.barginView.frame.size.width, [UIScreen mainScreen].bounds.size.height-190-64);
    self.questionView.frame=CGRectMake(0, 45, self.questionView.frame.size.width, leftheight/2);
    self.answerView.frame=CGRectMake(0, 45+leftheight/2, self.answerView.frame.size.width, leftheight/2);
    
    NSDate *temp = [NSDate dateWithTimeIntervalSince1970:[self.recordsEntity.create_time integerValue]];
    NSDateFormatter *formatter = [[NSDateFormatter alloc] init];
    [formatter setDateStyle:NSDateFormatterMediumStyle];
    [formatter setTimeStyle:NSDateFormatterShortStyle];
    [formatter setDateFormat:@"YYYY-MM-dd HH:mm"]; // ----------设置你想要的格式,hh与HH的区别:分别表示12小时制,24小时
    NSString* dateStr = [formatter stringFromDate:temp];
    self.lblTime.text= dateStr;
    
    self.productIDlbl.text=self.recordsEntity.pno;
    
    switch ([self.recordsEntity.state intValue]) {
        case 0:
            self.statuslbl.text=@"等待受理";
            break;
        case 1:
            self.statuslbl.text=@"受理中";
            break;
        case 2:
            self.statuslbl.text=@"受理完成";
            break;
        case 3:
            self.statuslbl.text=@"受理完成";
            break;
        default:
            self.statuslbl.text=@"— —";
            break;
    }
    
    
    if([self.recordsEntity.state isEqualToString:@"0"]||[self.recordsEntity.state isEqualToString:@"1"]){
        self.isFixedlbl.text=@"— —";
    }
    else if([self.recordsEntity.state isEqualToString:@"3"]){
        self.isFixedlbl.text=@"是";
    }
    else
    {
        self.isFixedlbl.text=@"否";
    }
    
    switch ([self.recordsEntity.point intValue]) {
        case 1:
            self.pointlbl.text=@"买入价";
            break;
        case 2:
            self.pointlbl.text=@"卖出价";
            break;
        case 3:
            self.pointlbl.text=@"合作权益";
            break;
        case 5:
            self.pointlbl.text=@"合作权益";
            break;
        case 7:
            self.pointlbl.text=@"其他";
            break;
        case 8:
            self.pointlbl.text=@"信息服务费";
            break;
        case 10:
            self.pointlbl.text=@"结算";
            break;
        default:
            self.pointlbl.text=@"其他";
            break;
    }
    
    self.questionText.text=self.recordsEntity.reason;
    self.answerText.text=self.recordsEntity.comment;
    
    if (self.recordsEntity.comment.length==0) {
        self.answerView.hidden=YES;
    }

    self.navigationItem.leftBarButtonItem = [UIBarButtonItem buttonItemWithIcon:@"nav_back" highlightedIcon:@"nav_back" target:self action:@selector(back)];
}


- (void)back {
    [self.navigationController popViewControllerAnimated:YES];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}


@end
